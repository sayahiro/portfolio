include ../../../layout/default/_default
include ../../component/header/_header
include ../../component/introduction/_introduction
include ../../component/job-description/_job-description
include ../../component/card-item/_card-item-career
include ../../component/card-item/_card-item-work
include ../../component/card-item/_card-item
